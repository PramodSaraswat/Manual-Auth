<div class="col col-sm-6 my-3 mx-auto border mt-3">
	<div class="m-sm-4">
		<div class="text-center mt-4">
            <h1 class="h2">Forgot Your Password?</h1>
            <p class="lead">
                Enter your account Email
            </p>
			<% if notice %>
				<div class="alert alert-warning alert-dismissible fade show" role="alert">
					<%= notice %>
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
			<% end %>
        </div>
		<%= form_with model: @user, local: true do |form| %>
			<% if @new_user %>
				<% @new_user.errors.full_messages.each do |message| %>
				<div class="alert alert-warning alert-dismissible fade show" role="alert">
					<%= message %>
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<% end %>
			<% end %>
		
			<div class="form-group">
				<label>Email</label>
				<%= form.text_field :email , :class => "form-control"%>
			</div>

			<div class="mt-2 mb-3">
				<%= form.submit "Send Reset link", :class => "btn btn-primary px-4"%>
			</div>

			<small style="font-size:15px;">
                <a href="<%= account_login_path %>">Sign In</a>
            </small><br>
            <small style="font-size:15px;">
                Don't have account?
                <a href="<%= account_signup_path %>">Create One!</a>
            </small><br>                                
            
		<% end %>
	</div>
</div>
						